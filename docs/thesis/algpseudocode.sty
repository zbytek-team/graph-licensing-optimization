% Minimal local implementation of algpseudocode (algorithmicx flavor)
\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{algpseudocode}[2025/09/09 local minimal algpseudocode]

% Basic algorithmic environment and commands used in the thesis
\RequirePackage{ifthen}

\newlength\ALG@indent
\setlength\ALG@indent{1.5em}

\newenvironment{algorithmic}[1][]% optional line numbers ignored
  {\begin{list}{}{\setlength{\leftmargin}{\ALG@indent}\setlength{\itemsep}{0.25ex}}}%
  {\end{list}}

\newcommand{\State}{\item }
\newcommand{\Comment}[1]{\hfill\textit{#1}}

% Blocks
\newcommand{\If}[1][]{\item \textbf{if}~#1}
\newcommand{\Else}{\item \textbf{else}}
\newcommand{\ElsIf}[1][]{\item \textbf{else if}~#1}
\newcommand{\EndIf}{}

\newcommand{\For}[1][]{\item \textbf{for}~#1}
\newcommand{\EndFor}{}

\newcommand{\While}[1][]{\item \textbf{while}~#1}
\newcommand{\EndWhile}{}

\newcommand{\Require}{\item[\textbf{Require}]~}
\newcommand{\Ensure}{\item[\textbf{Ensure}]~}
\newcommand{\Return}{\item[\textbf{Return}]~}
